@model IEnumerable<WebCode.Models.Origem>

@{
    ViewData["Title"] = "Controle de Origens";
}

<hr />

<h3>@ViewData["Title"]</h3>

<p>
    <div>
    <a asp-action="Create" class="btn btn-default"><span style="font-size:12px" class="glyphicon glyphicon-plus"></span>   Criar Nova</a>
    <a asp-action="Ficha" class="btn btn-default"><span style="font-size:12px" class="glyphicon glyphicon-list-alt"></span>   Visualizar Ficha</a>
    <a asp-action="GeraPDF" class="btn btn-default"><span style="font-size:12px" class="glyphicon glyphicon-print"></span>   Gerar Pdf</a>
</div>
    
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
